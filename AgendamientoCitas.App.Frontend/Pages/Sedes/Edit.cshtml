@page
@using AgendamientoCitas.App.Dominio
@model AgendamientoCitas.App.Frontend.Pages.Sedes.EditModel
@{
}

<h1>Editar Sede</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="sede.Nombre"></label>
        <input asp-for="sede.Nombre" class="form-control">
        <span asp-validation-for="sede.Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="sede.Direccion"></label>
        <input asp-for="sede.Direccion" class="form-control">
        <span asp-validation-for="sede.Direccion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="sede.Telefono"></label>
        <input asp-for="sede.Telefono" class="form-control">
        <span asp-validation-for="sede.Telefono" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Editar Sede</button>
</form>
<a class="btn btn-secundary" asp-page="./Index">Volver</a>